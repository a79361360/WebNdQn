		.page{margin:20% .3rem 0; border-radius:.2rem; padding:.5rem 0; background:rgba(255,255,255,.8); -webkit-box-shadow:0 0 .25rem rgba(0, 0, 0, .3); -moz-box-shadow:0 0 .25rem rgba(0, 0, 0, .3); box-shadow:0 0 .25rem rgba(0, 0, 0, .3);}
		.page .title{padding:0 .4rem;}
