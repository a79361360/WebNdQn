    <script type="text/javascript">
        $(function () {
            //开始答题
            $(".start").click(function () {
                if (checkMobile()) {
                    $(".one").css("display", "none");
                    $(".main").css("display", "block");
                    $(".start").unbind("click");
                }
            });
            //改变背景
            chg_bg = function () {
                var bgurl = '@ViewBag.bgurl';
                if (bgurl != "") {
                    console.log($(".one.main"))
                    $(".one")[0].style.backgroundImage = "url(" + bgurl + ")";
                    $(".main")[0].style.backgroundImage = "url(" + bgurl + ")";
                }
            }
            chg_bg();   //初始调用，改变背景图
			var wh = $(window).height();
			var mh = $(".main").height();
			mainheight(wh, mh);
			$(window).resize(function () {
			    var wh = $(window).height();
			    var mh = $(".main").height();
			    mainheight(wh, mh);
			});
			function mainheight(wh, mh) {
			    if (mh < wh) {
			        $(".main").css("height", wh)
			    } else {
			        $(".main").css("height", "auto")
			    }
			}
            //活动说明
			$(".huodongsm").click(function(){
				$(".black").css("display","block");
				$(".shuoming").css("display", "block");
			});
            //答题详情
			$(".datixq").click(function(){
				$(".black").css("display","block");
				$(".xiangqing").css("display", "block");
				opendtdetail();
			});
            //关闭
			$(".close").click(function(){
				$(this).parent().css("display","none");
				$(this).parent().parent().css("display", "none");
			});
		})
		//答题详情
		opendtdetail = function () {
		    var cooperid = $("#cooperid").val();
		    var openid = $("#openId").val();
		    $.getJSON("/Zxdt/ZxdtDrawLog", { cooperid: cooperid, openid: openid }, function (ret) {
		        if (ret.success) {
		            var str = "";
		            $.each(ret.jsonresult, function (i, o) {
		                str += "<tr><td>" + o.addtime + "</td><td>" + o.score + "</td></tr>";
		            })
		            $(".xiangqing tbody").html(str);
		        }
		    })
		}
		//添加分享记录
		activityshare = function (sharetype) {
		    var cooperid = $("#cooperid").val();
		    var openid = $("#openId").val();
		    $.ajax({
		        type: "post",
		        url: "/Zxdt/ZxdtShare",
		        data: { cooperid: cooperid, openid: openid, sharetype: sharetype },
		        async: false,
		        success: function (ret) {
		            if (ret.success) {
		                window.location.href = window.location.href + "&id=" + 10000 * Math.random();
		            }
		        }
		    });
		}
    </script>
